{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=gameauth.db"
  },
  "Jwt": {
    "Key": "CHANGE_THIS_IN_PRODUCTION_USE_USER_SECRETS_OR_ENV_VARS",
    "Issuer": "GameAuthApi",
    "Audience": "GameClient",
    "ExpirationHours": 2
  },
  "SeedData": {
    "Enabled": false
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 10485760,
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  }
}
